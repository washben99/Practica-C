                    printf("dia %i", aux1);
                    Pausa();
                    socios[*contadorSocios].nacimiento.dia=aux1;
                    strcpy(aux2, strtok(NULL,"/"));
                    aux1=atoi(aux2);
                    printf("mes %i", aux1);
