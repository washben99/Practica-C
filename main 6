                    contador=contador+1;
                }

                printf("\nauxbucle %s",aux);
                printf("contador1 %i \n",contador);

                if (contadorSocios==50)
                {
                    printf("Lista llena");
                    while(!feof (fichImporSocios))
                    {
                        fflush(stdin);
                        fgets(aux,30,fichImporSocios);
